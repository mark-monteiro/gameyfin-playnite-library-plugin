# To learn more about .editorconfig see https://aka.ms/editorconfigdocs

###############################
# Core EditorConfig Options   #
###############################

# All files
[*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# XAML files
[*.xaml]
indent_size = 4

# Markdown files
[*.md]
max_line_length = 120

# .NET Code files
[*.{cs,csx,vb,vbx}]
indent_size = 4
max_line_length = 120
charset = utf-8-bom
